{
  "name": "voidbridge",
  "version": "1.0.0",
  "description": "VoidBridge - Internet bridge system for Meshtastic mesh networks with encrypted P2P discovery",
  "main": "voidbridge.js",
  "scripts": {
    "build": "tsc",
    "start": "node voidbridge.js",
    "dev": "ts-node voidbridge.ts",
    "dev:watch": "tsx watch voidbridge.ts",
    "voidbridge": "ts-node voidbridge.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false"
  },
  "keywords": [
    "meshtastic",
    "mesh",
    "radio",
    "bridge",
    "internet",
    "p2p",
    "lora",
    "void"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@meshtastic/core": "npm:@jsr/meshtastic__core@^2.6.4",
    "@meshtastic/protobufs": "npm:@jsr/meshtastic__protobufs@^2.7.0",
    "@types/node": "^24.0.13",
    "serialport": "^13.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.0"
