version: '3.8'

services:
  encryptedmeshlink:
    build:
      context: .
      dockerfile: Dockerfile.pi
    container_name: eml-pi-station
    restart: unless-stopped
    
    # Pi-optimized environment
    environment:
      - NODE_ENV=production
      - ENCRYPTEDMESHLINK_AUTO_UPDATE=true
      - ENCRYPTEDMESHLINK_UPDATE_INTERVAL_HOURS=1
      - ENCRYPTEDMESHLINK_UPDATE_BRANCH=master
      - NODE_OPTIONS=--max-old-space-size=256
    
    # Volume mounts for persistence
    volumes:
      - ./config:/deployment/current/config
      - ./data:/deployment/current/data
      - eml-git:/deployment/.git
    
    # Network configuration
    ports:
      - "8447:8447"
    
    # USB device access for Meshtastic (common Pi USB patterns)
    devices:
      - /dev/ttyUSB0:/dev/ttyUSB0
      - /dev/ttyACM0:/dev/ttyACM0
      - /dev/ttyUSB1:/dev/ttyUSB1
      - /dev/ttyACM1:/dev/ttyACM1
    
    # Privileged access for hardware (required for USB on Pi)
    privileged: true
    
    # Pi-optimized health check (longer intervals)
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8447/health"]
      interval: 60s
      timeout: 15s
      retries: 3
      start_period: 60s
    
    # Pi resource limits (conservative for stability)
    deploy:
      resources:
        limits:
          memory: 256M
          cpus: '1.0'
        reservations:
          memory: 128M
          cpus: '0.5'

volumes:
  eml-git:
    driver: local
