# EncryptedMeshLink Environment Configuration
# Copy this file to .env and customize for your environment

# Discovery Service Configuration
ENCRYPTEDMESHLINK_DISCOVERY_URL=https://discovery.encryptedmeshlink.net/api
ENCRYPTEDMESHLINK_DISCOVERY_TIMEOUT=30
ENCRYPTEDMESHLINK_DISCOVERY_CHECK_INTERVAL=300

# P2P Communication Defaults
ENCRYPTEDMESHLINK_P2P_LISTEN_PORT=8447
ENCRYPTEDMESHLINK_P2P_MAX_CONNECTIONS=10
ENCRYPTEDMESHLINK_P2P_CONNECTION_TIMEOUT=30

# Mesh Network Defaults
ENCRYPTEDMESHLINK_MESH_AUTO_DETECT=true
ENCRYPTEDMESHLINK_MESH_BAUD_RATE=115200

# Security Configuration
ENCRYPTEDMESHLINK_DEFAULT_KEY_SIZE=2048

# Logging Configuration (Phase 2)
ENCRYPTEDMESHLINK_LOG_LEVEL=info
ENCRYPTEDMESHLINK_LOG_FILE=./logs/encryptedmeshlink.log

# Development/Debug Settings
ENCRYPTEDMESHLINK_DEBUG=false
ENCRYPTEDMESHLINK_DEVELOPMENT_MODE=false
